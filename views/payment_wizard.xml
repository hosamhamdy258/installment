<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="register_payment_view_form" model="ir.ui.view">
        <field name="name">register_payment.view.form</field>
        <field name="model">installment.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="installment payment">
                <sheet>
                    <group>
                        <field name="amount" />
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" name="action_confirm_payment" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Close" class="btn-primary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>